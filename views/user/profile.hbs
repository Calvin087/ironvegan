<div class="container mt-5 mb-5">
  
  <div class="d-flex justify-content-between align-items-center p-2">
    <div>
      <h1>Hi {{currentUser.name}} ðŸ‘‹</h1>
      <p class="mb-0">Email: {{currentUser.email}}</p>
      <p>Joined: {{formatCommentDates currentUser.createdAt}}</p>
    </div>   
    <div>
      <img class="profile-picture" src="{{currentUser.avatarImg}}" alt="avatar">
    </div>   
  </div>

  
  {{!-- TODO use the new helper from comment pull req --}}
</div>


<div class="container mb-5">
  <h2 class="mb-3">Your Favourites</h2>
   <div class="row row-cols-2 row-cols-md-4 g-2">
    {{#if favourites}}
      {{#each favourites as |favourite| }}
        {{>favouritesCard}}
      {{/each}}
    {{/if}}
  </div>
</div>

<div class="container mb-5">
  <h2 class="mb-3">Your Recent Reviews</h2>
   <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#if comments}}
      {{#each comments as |comment| }}
        {{>commentCard comment=comment showActions=false}}
      {{/each}}
    {{/if}}
  </div>
</div>

