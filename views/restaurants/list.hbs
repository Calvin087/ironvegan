<div class="container">
  <div class="row mx-auto">
    {{#each restaurants as |restaurant|}}
      <div class="col-xl-3 col-sm-6 col-xs-12 gy-4 d-flex align-items-stretch">
        <div class="card w-100" style="width: 18rem;">
          <div class="position-relative">
            {{#each restaurant.image as |image|}}
              {{#if @last}}
                {{!-- <img src="{{image}}" class="card-img-top" alt="restaurant" /> --}}
                <div
                  style="background-image: url({{image}});"
                  class="card-images"
                ></div>
              {{/if}}
            {{/each}}
            <button class="avocado-button">
              <img 
              data-id="{{restaurant.id}}"
              class="
              {{#userDoAvocado avocados=../avocados restaurant=restaurant}}icon-avocado{{/userDoAvocado}}
              "></img>
            </div>
          </div>
          <div class="card-body d-flex flex-column mt-2">
            <h6 class="card-title">{{restaurant.name}}</h6>
            <small
              class="card-text text-small mb-3"
            >{{restaurant.description}}</small>
            <a
              href="/restaurants/{{restaurant.id}}"
              class="btn btn-outline-dark mt-auto"
            >Detail</a>
            <a
              href="/restaurants/{{restaurant.id}}/edit"
              class="btn btn-outline-success mt-1"
            >Edit info</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>