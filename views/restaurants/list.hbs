<div class="container">
  <div class="row mx-auto">
    {{>categoryList}}
    {{#each restaurants as |restaurant|}}
      <div class="col-xl-3 col-sm-6 col-xs-12 gy-4 d-flex align-items-stretch">
        <div class="card w-100" style="width: 18rem;">
          <div class="position-relative">
            {{#each restaurant.image as |image|}}
              {{#if @last}}
                {{!-- <img src="{{image}}" class="card-img-top" alt="restaurant" /> --}}
                <div
                  style="background-image: url({{image}});"
                  class="card-images"
                ></div>
              {{/if}}
            {{/each}}
            <button type="button" class="avocado-button" {{#unless ../currentUser}}data-bs-toggle="tooltip" data-bs-placement="top" title="Sign Up To Add Favourites"{{/unless}}>
               <div
               data-id="{{restaurant.id}}"
               class="list-page-advocado
                {{#userDoAvocado avocados=../avocados restaurant=restaurant}}list-page-advocado-active{{/userDoAvocado}}
                "
               >
               </div>
              </button>
          </div>
          <div class="card-body d-flex flex-column mt-2">
            <h5 class="card-title text-truncate">{{restaurant.name}}</h5>
            <small
              class="card-text text-small mb-3"
            >{{restaurant.description}}</small>
            <a
              href="/restaurants/{{restaurant.id}}"
              class="btn btn-success"
            >View Details</a>
            {{!-- <a
              href="/restaurants/{{restaurant.id}}/edit"
              class="btn btn-outline-success mt-1"
            >Edit info</a> --}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>

{{#if currentUser}}
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/js/axios.js"></script>
{{/if}}

