<form action="/restaurants/new" method="POST">
  <div class="form-group mb-3">
    <label for="name">Name</label>
    <input name="name" type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" id="name" placeholder="Brunch & Cocktails..."
      value="{{ restaurant.name }}">
    {{#if errors.name}}
      <div class="invalid-feedback">
        {{errors.name.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-3">
    <label for="address">Address</label>
    <input name="address" type="text" class="form-control {{#if errors.address}}is-invalid{{/if}}" id="address" placeholder="Calle Arlaban 1..."
      value="{{ restaurant.address }}">
    {{#if errors.address}}
      <div class="invalid-feedback">
        {{errors.address.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-3">
    <label for="phone">Phone number</label>
    <input name="phone" type="text" class="form-control {{#if errors.phone}}is-invalid{{/if}}" id="phone" placeholder="+34 915..."
      value="{{ restaurant.phone }}">
    {{#if errors.phone}}
      <div class="invalid-feedback">
        {{errors.phone.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-3">
    <label for="website">Web</label>
    <input name="website" type="text" class="form-control {{#if errors.website}}is-invalid{{/if}}" id="website" placeholder="www.brunch-tails.com..."
      value="{{ restaurant.website }}">
    {{#if errors.website}}
      <div class="invalid-feedback">
        {{errors.website.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-3">
    <label for="schedule">Schedule</label>
    <input name="schedule" type="text" class="form-control {{#if errors.schedule}}is-invalid{{/if}}" id="schedule" placeholder="Mon-Thurs: 9am - 10pm..."
      value="{{ restaurant.schedule }}">
    {{#if errors.schedule}}
      <div class="invalid-feedback">
        {{errors.schedule.message}}
      </div>
    {{/if}}
  </div>

