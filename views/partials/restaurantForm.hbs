{{#if edit }}
  <form action="/restaurants/{{restaurant.id}}/edit" method="POST">
{{else}}
  <form action="/restaurants" method="POST">
{{/if}}
  <div class="form-group mb-1">
    <label for="name">Name</label>
    <input name="name" type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" id="name" placeholder="Enter name"
      value="{{ restaurant.name }}">
    {{#if errors.name}}
      <div class="invalid-feedback">
        {{errors.name.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-1">
    <label for="address">Address</label>
    <input name="address" type="text" class="form-control {{#if errors.address}}is-invalid{{/if}}" id="address" placeholder="Enter address"
      value="{{ restaurant.address }}">
    {{#if errors.address}}
      <div class="invalid-feedback">
        {{errors.address.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-1">
    <label for="phone">Phone number</label>
    <input name="phone" type="text" class="form-control {{#if errors.phone}}is-invalid{{/if}}" id="phone" placeholder="Enter phone number"
      value="{{ restaurant.phone }}">
    {{#if errors.phone}}
      <div class="invalid-feedback">
        {{errors.phone.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-1">
    <label for="website">Web</label>
    <input name="website" type="text" class="form-control {{#if errors.website}}is-invalid{{/if}}" id="website" placeholder="Enter Website"
      value="{{ restaurant.website }}">
    {{#if errors.website}}
      <div class="invalid-feedback">
        {{errors.website.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-1">
    <label for="schedule">Schedule</label>
    <input name="schedule" type="text" class="form-control {{#if errors.schedule}}is-invalid{{/if}}" id="schedule" placeholder="Enter opening hours"
      value="{{ restaurant.schedule }}">
    {{#if errors.schedule}}
      <div class="invalid-feedback">
        {{errors.schedule.message}}
      </div>
    {{/if}}
  </div>

   <div class="form-group mb-1">
    <label for="dishType">Type of cuisine</label>
    <input name="dishType" type="text" class="form-control {{#if errors.dishType}}is-invalid{{/if}}" id="dishType" placeholder="Enter cuisine type"
      value="{{ restaurant.dishType }}">
    {{#if errors.dishType}}
      <div class="invalid-feedback">
        {{errors.dishType.message}}
      </div>
    {{/if}}
  </div>

    
   <div class="form-group mb-1">
    <label for="takeOut">Takeaway</label>
   <select id="takeOut">
<option value="yes">Yes</option>
<option value="not">Not</option>
   </select>
  </div>

   <div class="form-group mb-1">
    <label for="veganOptions">Vegan options</label>
   <select id="veganOptions">
<option value="yes">Yes</option>
<option value="not">Not</option>
   </select>
  </div>

  <div class="form-group mb-1">
    <label for="fullVegan">Full vegan</label>
   <select id="fullVegan">
<option value="yes">Yes</option>
<option value="not">Not</option>
   </select>
  </div>

  <div class="form-group mb-1">
    <label for="image">Image</label>
    <input name="image" type="text" class="form-control {{#if errors.image}}is-invalid{{/if}}" id="image" placeholder="Enter image"
      value="{{ restaurant.image }}">
    {{#if errors.image}}
      <div class="invalid-feedback">
        {{errors.image.message}}
      </div>
    {{/if}}
  </div>

  <div class="form-group mb-1">
    <label for="text">Description</label>
    <textarea name="description" type="text" class="form-control html-editor {{#if errors.description}}is-invalid{{/if}}" id="text"
      placeholder="Enter restaurant description" rows="10">{{ restaurant.description }}</textarea>
    {{#if errors.description}}<div class="invalid-feedback">{{errors.description}}</div>
    {{/if}}
  </div>
  </div>

