<div class="col">

  <div class="card">
    <div
      style="background-image: url({{comment.images}}); height:200px; background-position: center;
  background-repeat: no-repeat; background-size: cover;"
    ></div>
    <div class="card-body">
      <h4 class="mb-2"><a href="/restaurants/{{restaurant._id}}" class="card-body__link">{{restaurant.name}}</a></h4>
      <p class="card-text">{{comment.description}}</p>
      <p class="mb-2 fw-bold">Rating ({{comment.rating}})</p>
      <p>{{{showKiwis comment.rating}}}</p>
    </div>
    <div class="card-footer">
      <small class="text-muted">Posted
        {{formatCommentDates comment.updatedAt}}</small>
    </div>

  {{#if showActions}}
    {{#isUserReview user=user._id comment=comment}}
    <div class="form-buttons">
      <form action="/comment/{{comment._id}}/edit" method="GET">
        <button type="submit" class="form-buttons__edit button button--green">Edit</button>
      </form>

      <form action="/comment/{{comment._id}}/delete" method="POST">
        <button type="submit" class="button">Delete</button>
      </form>
    </div>
      
    {{/isUserReview}}
  {{/if}}


